<Window x:Class="_07_WPF_02_Move_text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPF_02_Move_text"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox 
            x:Name="InputTB"
            HorizontalAlignment="Left" 
            Margin="121,82,0,0" 
            TextWrapping="Wrap" 
            Text="Sem něco napiš" 
            VerticalAlignment="Top" 
            Width="120" 
            TextChanged="UserInput"
            
            />
        
        <Button Content="Přesuň" HorizontalAlignment="Left" Margin="121,121,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        
        <TextBlock x:Name="OutputBlock" HorizontalAlignment="Left" Margin="121,163,0,0" TextWrapping="Wrap" Text="Tady se to objeví" VerticalAlignment="Top"/>

    </Grid>
</Window>
